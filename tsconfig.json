{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["./src/*"],
      "utils/*": ["./src/utils/*"],
      "components/*": ["./src/app/components/*"],
      "layout/*": ["./src/app/components/layout/*"],
      "common/*": ["./src/app/components/layout/common/*"],
      "core/*": ["./src/app/components/core/*"],
      "userLogic/*": ["./src/userLogic/*"],
      "db/*": ["./src/db/*"]
    }
  },
  "include": ["./src/app/**/*"]
}
